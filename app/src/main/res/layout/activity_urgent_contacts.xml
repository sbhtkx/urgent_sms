<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.urgent_sms.UrgentContactsActivity">


    <ImageButton
        android:id="@+id/img_add_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:background="@color/noColor"
        app:srcCompat="@drawable/add_contact" />

    <ListView
        android:id="@+id/listView_urg_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_add_contacts"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/no_contacts_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/img_add_contacts"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/nice_font"
        />


</RelativeLayout>
