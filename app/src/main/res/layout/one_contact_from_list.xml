<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contact_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/nice_font"
        android:layout_marginTop="10dp"
        android:text="yael pesso"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nice_font"
        android:text="0509011123"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/rmv_contact_btn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/noColor"
        app:srcCompat="@drawable/rmv_contact" />

    <TextView
        android:id="@+id/urgency_level_contact_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="242dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nice_font"
        android:text="extremely urgent"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>