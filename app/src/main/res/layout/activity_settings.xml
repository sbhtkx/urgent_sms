<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.urgent_sms.SettingsActivity">

    <Switch
        android:id="@+id/enable_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:text="Enable Urgent SMS"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enable_switch"
        android:layout_alignStart="@+id/enable_switch"
        android:layout_below="@+id/enable_switch"
        android:layout_marginTop="35dp"
         />

    <Button
        android:id="@+id/setContacts_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_txt"
        android:layout_alignBottom="@+id/msg_txt"
        android:layout_alignLeft="@+id/msg_txt"
        android:layout_alignStart="@+id/msg_txt"
        android:textAllCaps="false"
        android:text="Set urgent contacts" />

    <Button
        android:id="@+id/setWords_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setContacts_btn"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/msg_txt"
        android:layout_toRightOf="@+id/msg_txt"
        android:textAllCaps="false"
        android:text="Set urget words" />

</RelativeLayout>
